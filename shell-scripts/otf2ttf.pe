#!/usr/local/bin/fontforge

Open($1);
fontFile = $fontname+".ttf";
Print('{');
Print('    "fontName":    "' + $fontname + '",');
Print('    "fontFamily":  "' + $familyname + '",');
Print('    "fontVersion": "' + $fontversion + '",');
Print('    "fontFile": "' + fontFile + '",');
Print('    "fontPath": "' + $2 + '",');
Print('    "copyright":   "' + $copyright + '"');
Print('}');

#Generate($1:h+"/"+$fontname+".ttf");
Generate($2+"/"+fontFile);
Quit(0);